---
import { Image } from 'astro:assets';
import logoFooter from '../assets/navigation/logo-footer.png';

const date = new Date();
const year = date.getFullYear();

const { links, socialLinks } = Astro.props;

---

<footer class="px-[3rem]">
  <div class="w-full flex columns-12 justify-between items-center py-[2.5rem]">
    <div class="span-cols-6 md:span-cols-4 lg:span-cols-2 pr-[10%]">
      <a href="/">
        <Image src={logoFooter} alt="Fair Source" />
      </a>
    </div>
    <div class="span-cols-6 lg:span-cols-8 flex items-center">
      <ul class="hidden lg:flex gap-[2.5rem] mr-[2.5rem]">
        {
          links.map((link) => <li>
            <a href={link.url} target={link.target} class="text-lightGray font-[600] font-[1.25rem] leading-[130%] font-sans hover:underline">{link.name}</a>
          </li>
          )
        }
      </ul>
      <ul class="flex gap-[0.38rem]">
        {
          socialLinks.map((link) => <li>
            <a href={link.url} target={link.target} class="h-[30px] w-[30px]"><Image src={link.icon} alt={link.name} class="h-[30px] w-[30px]" /></a>
          </li>
          )
        }
      </ul>
    </div>


  </div>
  <hr class="text-taupe" />
  <div class="flex justify-center py-[2.69rem]">
    <p class="text-lightGray text-[1.25rem] heading-[130%]">Copyright Â© {year ? year : ''} Fair.io | All Rights Reserved</p>
  </div>

</footer>
